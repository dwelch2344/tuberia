# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build example-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t example-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system example-app && \
          adduser --system -G example-app example-app

COPY dist/packages/example-app example-app
RUN chown -R example-app:example-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix example-app --omit=dev -f install

CMD [ "node", "example-app" ]
